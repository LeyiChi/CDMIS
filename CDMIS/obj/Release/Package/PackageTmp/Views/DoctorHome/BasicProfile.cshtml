                        @Html.ValidationMessageFor(model => model.Occupation)
                    </div>
                    <label class="col-sm-2 control-label">
                        国籍</label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.Nationality, new { id = "Nationality", style = "font-size:15px", @class = "form-control" })
