                overlayClose: true     //点击蒙层关闭窗口
            });
        });

        $(".sureDeleteBtn").click(function () {
            table1.column(0).visible(true);
            var SynptomsNo = $("#TableBody tr:eq(" + trSeq + ") td:eq(0)").text().trim();
            $.ajax({
                url: "/DoctorHome/SymptomInfoDelete",
                type: "GET",
                dataType: "json",
                async: false,
