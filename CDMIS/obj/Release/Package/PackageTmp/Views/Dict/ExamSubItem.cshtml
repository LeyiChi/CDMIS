@model IEnumerable<CDMIS.Models.ExamSubItem>

@{
    ViewBag.Title = "ExamSubItem";
}

<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
<link href="../../Content/jquery.dataTables.css" rel="stylesheet" type="text/css" />
<link href="../../Content/simpleModal.css" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-1.11.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
<script type="text/javascript" src="../../Scripts/jquery.dataTables.js"></script>
<script type="text/javascript" src="../../Scripts/jquery.simplemodal.1.4.4.min.js"></script>

<style type="text/css">
    #simplemodal-container {height:420px; width:400px;}
    #delete-container {height:320px; width:400px;}
</style>

<ul id="tabs" style="margin: 5px 0 20px 0;">
    <li>
        @Html.ActionLink("未匹配检查子项目字典表", "UnCompExamSubItem", new { })</li>
    <li>
        @Html.ActionLink("已匹配检查子项目字典表", "CompExamSubItem", new { })</li>
    <li>
        @Html.ActionLink("检查子项目字典表", "ExamSubItem", new { }, new { id = "current" })</li>
</ul>
<div style="text-align: right;">
    <input type="button" value="新增数据" class="btn btn-primary insertBtn" style="margin-right: 10px"/>
</div>
<div id="tableContainer1" class="tableContainer" style="margin-top: 5px" >
    <table width="100%" id="DataTable" class="display">
        <thead>
            <tr>
                <th align="left">
                    编码
                </th>
                <th align="left">
                    名称
                </th>
                <th align="left" style="display:none">
                    序号
                </th>
                <th align="left" style="display:none">
                    输入码
                </th>
                <th align="left">
                    描述
                </th>
                <th>
                    操作
                </th>
            </tr>
        </thead>
        <tbody id="TableBody">
             @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.SortNo)
                    </td>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.InputCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <input type="button" value="编辑" class="btn btn-primary editBtn " /> 
                        @*<input type="button" value="删除" class="btn btn-primary deleteBtn" />*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@*编辑页面弹框*@
<div id="addDataDiv" style="display: none;">
    <div class="modalHeader">
        <span>检查项目子字典表编辑</span>
    </div>
    <div class="modalContent">
        <form class="form-horizontal" role="form"> 
            <div class="form-group">
                <label for="Code" class="col-sm-3 control-label">
                    编码
                </label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="Code"  value="" readonly="readonly"  onkeyup="IsCodeOk();" />
                    <p id="CodeWrn" style="font-size: 16px; color: #FF0000; font-weight: bold;display: none"></p>
                </div>
            </div>
            <div class="form-group">
                <label for="Name" class="col-sm-3 control-label">
                    名称
                </label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="Name" />
                </div>
            </div>
            <div class="form-group" style="display:none">
                <label for="InputCode" class="col-sm-3 control-label" >
                    序号
                </label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="SortNo"  />
                </div>
            </div>
            <div class="form-group">
                <label for="InputCode" class="col-sm-3 control-label" >
                    输入码
                </label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="InputCode"  />
                </div>
            </div>
            <div class="form-group">
                <label for="Description" class="col-sm-3 control-label">
                    描述
                </label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="Description" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-7">
                    <input type="button" class="btn btn-primary save" onclick="AddDataToDB();" value="保存" />
                    <input type="button" class="btn btn-default simplemodal-close" value="取消" />
                </div>
            </div>
            <p align="center" style="color:red" class="notice">
            </p>
        </form>
    </div>
</div>

<script type="text/javascript">
    var newflag = 0;
    var saveflag = 1;
    var typeflag = 0;
    var codeflag = 0;
    var nameflag = 0;
    var startdateflag = 0;

    var enddateflag = 0; //编辑弹框输入合法性标志位 0 不合法 1 合法
    var trSeq = -1; //选定的行标
    var editType = 0; //编辑类型，0：无  1：编辑  2：新增
    $(document).ready(function () {
        var table = $('#DataTable').DataTable({
            "oLanguage": {//语言国际化
                "sUrl": "/Content/jquery.dataTable.cn.txt"
            },
            "bPaginate": true,  //是否分页。
            "sScrollY": "420px",
            "iDisplayLength": 11,
            "bLengthChange": false,
            "bFilter": true
        });
    })

    //编辑按钮触发
    $(".editBtn").click(function () {
        newflag = 0;
        typeflag = 1;
        codeflag = 1;
        nameflag = 1;
        startdateflag = 1;
        enddateflag = 1;
        editType = 1;

        $('#Code').attr('readonly', "readonly");

        trSeq = $(this).parent().parent().parent().find("tr").index($(this).parent().parent());
        var Code = $("#TableBody tr:eq(" + trSeq + ") td:eq(0)").text().trim();
        var Name = $("#TableBody tr:eq(" + trSeq + ") td:eq(1)").text().trim();
        var SortNo = $("#TableBody tr:eq(" + trSeq + ") td:eq(2)").text().trim();
        var InputCode = $("#TableBody tr:eq(" + trSeq + ") td:eq(3)").text().trim();
        var Description = $("#TableBody tr:eq(" + trSeq + ") td:eq(4)").text().trim();
        EditData(Code, Name, SortNo, InputCode, Description);
    });

    //新增按钮触发
    $(".insertBtn").click(function () {
        newflag = 1;
        typeflag = 0;
        codeflag = 0;
        nameflag = 0;
        startdateflag = 0;
        enddateflag = 0;
        editType = 2;

        // $('#Type').removeAttr('readonly');
        $('#Code').removeAttr('readonly');

        InsertData();
    });



    //编辑数据
    function EditData(Code, Name, SortNo, InputCode, Description) {
        ///document.getElementById("Type").value = Type;
        document.getElementById("Code").value = Code;
        document.getElementById("SortNo").value = SortNo;
        document.getElementById("Name").value = Name;
        document.getElementById("InputCode").value = InputCode;
        document.getElementById("Description").value = Description;

        $('.save').removeAttr('disabled');
        $('#addDataDiv').modal({
            closeHTML: "<a href='#' title='Close' class='modal-close'>x</a>",
            overlayClose: true     //点击蒙层关闭窗口
        });
    }

    //新增数据
    function InsertData() {
        //document.getElementById("Type").value = "";
        document.getElementById("Code").value = "";
        document.getElementById("SortNo").value = "0";
        document.getElementById("Name").value = "";
        document.getElementById("InputCode").value = "";
        document.getElementById("Description").value = "";

        $('.save').attr('disabled', "disabled");
        $('#addDataDiv').modal({
            closeHTML: "<a href='#' title='Close' class='modal-close'>x</a>",
            overlayClose: true     //点击蒙层关闭窗口
        });
    }


    //编辑or新增提交
    function AddDataToDB() {
        // var Type = document.getElementById("Type").value;
        var Code = document.getElementById("Code").value;
        var SortNo = document.getElementById("SortNo").value;
        var Name = document.getElementById("Name").value;
        var InputCode = document.getElementById("InputCode").value;
        var Description = document.getElementById("Description").value;
        $.ajax({
            url: "/Dict/ExamSubItemEdit",
            type: "GET",
            dataType: "json",
            async: false,
            data: {
                Code: Code,
                Name: Name,
                SortNo: SortNo,
                InputCode: InputCode,
                Description: Description
            },  //输入参数
            success: function (res) {
                if (res == true) {
                    if (editType == 1) {
                        editType = 0;
                        trSeq = -1;
                    }
                    if (editType == 2) {
                        editType = 0;
                    }
                    notice();
                }
                else {
                    alert("数据插入失败，请重新输入！");
                }
            }
        });
    }

    //操作成功提醒+关闭窗口+字典表刷新
    var wait = 1.5;
    function notice() {
        if (wait == 0) {
            window.location.reload();
            $.modal.close();
            wait = 1.5
        }
        else {
            $('.notice').text("操作成功！字典表将在<" + wait + "s>后自动刷新");
            wait = wait - 0.5;
            setTimeout(notice, 500);
        }
    }




    //去除空格
    String.prototype.trim = function () {
        return this.replace(/(^\s*)|(\s*$)/g, "");
    }



    //编辑or新增提交
    function GetTypeName() {
        //var Type = document.getElementById("Type").value;
        var Code = document.getElementById("Code").value;
        document.getElementById("TypeName").value = "";
        $('.save').attr('disabled', 'disabled');
        IsSaveOk(Code);
        $('#TypeWrn').css("display", "none");
        //        if (!IsTypeLegal(Type)) {
        //            var Text = "类型必须为整数！";
        //            $('#TypeWrn').html(Text);
        //            $('#TypeWrn').css("display", "block");
        //        }
        //        else {
        if (Type != "") {
            $.ajax({
                url: "/Dict/GetLabItemTypeNamebyType",
                type: "GET",
                dataType: "json",
                async: false,
                data: { Type: Type
                },  //输入参数
                success: function (res) {
                    if (res != "") {
                        document.getElementById("TypeName").value = res;
                    }

                }
            });
            // }
        }
    }

    //编辑or新增提交
    function IsCodeOk() {
        $('#CodeWrn').css("display", "none");
        saveflag = 1;
        //var Type = document.getElementById("Type").value;
        var Code = document.getElementById("Code").value;


        if (Code != "") {
            $.ajax({
                url: "/Dict/GetExamSubItemName",
                type: "GET",
                dataType: "json",
                async: false,
                data: {
                    Code: Code

                },  //输入参数
                success: function (res) {
                    if (res != "") {
                        saveflag = 0;
                        var Text = "已存在的编码！";
                        $('#CodeWrn').html(Text);
                        $('#CodeWrn').css("display", "block");
                    }
                    else {
                        //alert("Code ok");
                        $('#CodeWrn').css("display", "none");
                    }
                }
            });

        }
        $('.save').attr('disabled', 'disabled');
        IsSaveOk(Code);
    }

    function IsSaveOk(Code) {
        //alert("test is save ok? Type:" + Type +" Code:"+ Code);
        if (Code == "") {
            $('.save').attr('disabled', 'disabled');
        }
        else {
            if (saveflag == 1) {
                $('.save').removeAttr('disabled');
            }
            else {
                $('.save').attr('disabled', 'disabled');
            }
        }
    }

    function IsTypeLegal(Type) {
        var re = /^\d+$/;
        if (!re.test(Type)) {
            return false;
        }
        else {
            return true;
        }

    }


</script>