@*编辑页面弹框*@
<div id="addDataDiv" style="display: none;">
    <div class="modalHeader">
        <span>药物字典表匹配</span>
    </div>
    <div class="modalContent">
        <form class="form-horizontal" role="form">
            <div class="form-group" style="display:none">
                <label class="col-sm-3 control-label">
                    医院代码
                </label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="HospitalCode" readonly="readonly" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">
                    医院名称
                </label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="HospitalName" readonly="readonly" />
                </div>
            </div>
            <div class="form-group" style="display:none">
                <label class="col-sm-3 control-label">
                    药物编码
                </label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="DrugCode" readonly="readonly"  />
                </div>
            </div>
            <div class="form-group" >
                <label class="col-sm-3 control-label">
                    药物名称
                </label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="DrugName"   readonly="readonly"  />
                </div>
            </div>
            <div class="form-group" >
                <label class="col-sm-3 control-label">
                    药物规格
                </label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="DrugSpec"  readonly="readonly"  />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">
                    单位
                </label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="Units" readonly="readonly" />
                </div>
            </div>
            <div class="form-group" style="display:none">
                <label class="col-sm-3 control-label">
                    输入码
                </label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="InputCode"  readonly="readonly"  />
                </div>
            </div>
            <div class="form-group">
                <label  class="col-sm-3 control-label" >
                    描述
                </label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="Description"  readonly="readonly"  />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">
                    匹配药物
                </label>
                <div class="col-sm-7">
                    @Html.DropDownListFor(model => model.DrugSelected, Model.DrugList(), new { id = "DrugDropDownList", @class = "form-control chosen", style = "font-size:18px" })                     
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-7">
                    <input type="button" class="btn btn-primary save" onclick="AddDataToDB();" value="保存" />
                    <input type="button" class="btn btn-default simplemodal-close" value="取消" />
                </div>
            </div>
            <p align="center" style="color:red" class="notice">
            </p>
        </form>
    </div>
</div>



<script type="text/javascript">
    var typeflag = 0;
    var codeflag = 0;
    var nameflag = 0;
    var startdateflag = 0;
    var enddateflag = 0; //编辑弹框输入合法性标志位 0 不合法 1 合法
    var trSeq = -1; //选定的行标
    var editType = 0; //编辑类型，0：无  1：编辑  2：新增
    $(document).ready(function () {
        var table = $('#DataTable').DataTable({
            "oLanguage": {//语言国际化
                "sUrl": "/Content/jquery.dataTable.cn.txt"
            },
            "bPaginate": true,  //是否分页。
            "sScrollY": "420px",
            "iDisplayLength": 10,
            "bLengthChange": false,
            "bFilter": true
        });

        //编辑按钮触发
        $(".editBtn").click(function () {
            typeflag = 1;
            codeflag = 1;
            nameflag = 1;
            startdateflag = 1;
            enddateflag = 1;
            editType = 1;
            trSeq = $(this).parent().parent().parent().find("tr").index($(this).parent().parent());
            var HospitalCode = $("#TableBody tr:eq(" + trSeq + ") td:eq(0)").text().trim();
            var HospitalName = $("#TableBody tr:eq(" + trSeq + ") td:eq(1)").text().trim();
            var DrugCode = $("#TableBody tr:eq(" + trSeq + ") td:eq(2)").text().trim();
            var DrugName = $("#TableBody tr:eq(" + trSeq + ") td:eq(3)").text().trim();
            var DrugSpec = $("#TableBody tr:eq(" + trSeq + ") td:eq(4)").text().trim();
            var Units = $("#TableBody tr:eq(" + trSeq + ") td:eq(5)").text().trim();
            var InputCode = $("#TableBody tr:eq(" + trSeq + ") td:eq(6)").text().trim();
            var Description = $("#TableBody tr:eq(" + trSeq + ") td:eq(7)").text().trim();
            //alert(DrugSpec);
            EditData(HospitalCode, HospitalName, DrugCode, DrugName, DrugSpec, Units, InputCode, Description);
        });




    });

    //编辑数据
    function EditData(HospitalCode, HospitalName, DrugCode, DrugName, DrugSpec, Units, InputCode, Description) {
        document.getElementById("HospitalCode").value = HospitalCode;
        document.getElementById("HospitalName").value = HospitalName;
        document.getElementById("DrugCode").value = DrugCode;
        document.getElementById("DrugName").value = DrugName;
        document.getElementById("DrugSpec").value = DrugSpec;
        document.getElementById("Units").value = Units;
        document.getElementById("InputCode").value = InputCode;
        document.getElementById("Description").value = Description;



        $('.save').removeAttr('disabled');
        $('#addDataDiv').modal({
            closeHTML: "<a href='#' title='Close' class='modal-close'>x</a>",
            overlayClose: true     //点击蒙层关闭窗口
        });

        $('.chosen').chosen({ disable_search_threshold: 10, no_results_text: "没有匹配结果：",
            allow_single_deselect: true, //配置是否简单搜索
            search_contains: true//配置是否开启全字匹配，不只是首字母搜索 
        });
    }




    //编辑or新增提交
    function AddDataToDB() {
        var HospitalCode = document.getElementById("HospitalCode").value;
        var HZCode = document.getElementById("DrugCode").value;
        var HZSpec = document.getElementById("DrugSpec").value;
        var DivisionDropDownList = document.getElementById("DrugDropDownList").value;
        var DrugCode = DivisionDropDownList.split("#")[0];
        var DrugSpec = DivisionDropDownList.split("#")[1];

        $.ajax({
            url: "/Dict/AddToCompDrug",
            type: "GET",
            dataType: "json",
            async: false,
            data: { HospitalCode: HospitalCode, HZCode: HZCode, HZSpec: HZSpec, DrugCode: DrugCode, DrugSpec: DrugSpec },  //输入参数
            success: function (res) {
                if (res == true) {
                    if (editType == 1) {
                        editType = 0;
                        trSeq = -1;
                    }
                    if (editType == 2) {
                        editType = 0;
                    }
                    notice();
                }
                else {
                    alert("数据插入失败，请重新输入！");
                }
            }
        });
    }

    //操作成功提醒+关闭窗口+字典表刷新
    var wait = 1.5;
    function notice() {
        if (wait == 0) {
            window.location.reload();
            $.modal.close();
            wait = 1.5
        }
        else {
            $('.notice').text("操作成功！字典表将在<" + wait + "s>后自动刷新");
            wait = wait - 0.5;
            setTimeout(notice, 500);
        }
    }



    //去除空格
    String.prototype.trim = function () {
        return this.replace(/(^\s*)|(\s*$)/g, "");
    }

</script>
