@model CDMIS.ViewModels.ClinicInfoDetailViewModel
@{
    ViewBag.Title = "临床详细信息（医生）";
    //Layout = "~/Views/Shared/_PatientInfoLayout.cshtml";
}
<script type="text/javascript" src="../../Scripts/MicrosoftAjax.js"></script>
<script type="text/javascript" src="../../Scripts/MicrosoftMvcAjax.js"></script>
<script type="text/javascript" src="../../Scripts/jquery-1.7.2.min.js"></script>
<script type="text/javascript" src="../../Scripts/jquery.unobtrusive-ajax.min.js"></script>
<link href="../../Content/jquery.dataTables.css" rel="stylesheet" type="text/css" />
<link href="../../Content/dataTables.fixedColumns.css" rel="stylesheet" type="text/css" />
@*<link href="../../Content/simpleModal.css" rel="stylesheet" type="text/css" />*@
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="../../Scripts/jquery.dataTables.js"></script>
<script type="text/javascript" src="../../Scripts/dataTables.fixedColumns.js"></script>
<script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
@*<script src="../../Scripts/jquery.simplemodal.1.4.4.min.js" type="text/javascript"></script>*@

<style>
    td a
    {
        text-decoration: underline;
        color: #5151A2;
    }
    td a:hover
    {
        color: red;
        text-decoration: underline;
    }
</style>
@Html.HiddenFor(model => model.UserId)
@Html.HiddenFor(model => model.NowType)
@Html.HiddenFor(model => model.VisitId)
@Html.HiddenFor(model => model.UserName)
@Html.HiddenFor(model => model.NowDate)
<div id="detailHeader" style="margin-left: 50px; margin-top: 10px; margin-bottom: 20px;">
    <div id="detailTitle" align="center">
        @if (Model.NowType == "DiagnosisInfo")
        {
            <h2>
                类别：诊断信息</h2>
        }
        else if (Model.NowType == "ExaminationInfo")
        {
            <h2>
                类别：检查信息</h2>
        }
        else if (Model.NowType == "LabTestInfo")
        {
            <h2>
                类别：化验信息</h2>
        }
        else
        {
            <h2>
                类别：用药信息</h2>
        }
    </div>
    <table cellpadding="3">
        <tr>
            <td width="10%" style="border: 0;">
                患者ID:
            </td>
            <td width="15%" style="border: 0;">
                @Model.UserId
            </td>
            <td width="10%" style="border: 0;">
                患者姓名:
            </td>
            <td width="12%" style="border: 0;">
                @Model.UserName
            </td>
            <td width="5%" style="border: 0;">
                日期:
            </td>
            <td width="12%" style="border: 0;">
                @Model.NowDate
            </td>
        </tr>
    </table>
</div>
<div id="DiagnosisInfo" style="display: none; width: 90%; margin: 0 auto;">
    <table id="DiagnosisInfoTable" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                <td>
                    诊断类型
                </td>
                @*<td>
                    诊断序号
                </td>*@
                <td>
                    诊断种类
                </td>
                <td>
                    诊断名称
                </td>
                <td>
                    描述
                </td>
                <td>
                    记录时间
                </td>
            </tr>
        </thead>
        <tbody>
            @if (Model.DiagnosisInfoTable.Rows.Count > 0)
            {
                foreach (System.Data.DataRow item in Model.DiagnosisInfoTable.Rows)
                {
                <tr>
                    <td>@item["DiagnosisTypeName"]
                    </td>
                    @*<td>@item["DiagnosisNo"]
                    </td>*@
                    <td>@item["TypeName"]
                    </td>
                    <td>@item["DiagnosisName"]
                    </td>
                    <td>@item["Description"]
                    </td>
                    <td>@item["RecordDateShow"].ToString().Replace("-/", "/")
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
</div>
<div id="ExaminationInfo" style="display: none; width: 95%; margin: 0 auto;">
    <table id="ExaminationInfoTable" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                @*<td>
                    检查序号
                </td>*@
                <td>
                    检查类型
                </td>
                <td>
                    检查日期
                </td>
                <td>
                    检查项目名称
                </td>
                <td style="display: none">
                    检查参数
                </td>
                <td style="display: none">
                    检查所见
                </td>
                <td style="display: none">
                    印象
                </td>
                <td style="display: none">
                    建议
                </td>
                <td>
                    是否阳性
                </td>
                <td>
                    检查结果状态
                </td>
                <td>
                    报告日期
                </td>
                <td>
                    图像地址
                </td>
                @*<td>
                    具体参数
                </td>*@
                <td>
                    详细
                </td>
            </tr>
        </thead>
        <tbody id="TableBody">
            @if (Model.ExaminationInfoTable.Rows.Count > 0)
            {
                foreach (System.Data.DataRow item in Model.ExaminationInfoTable.Rows)
                {
                <tr>
                    @*<td>@item["SortNo"]
                    </td>*@
                    <td>@item["ExamTypeName"]
                    </td>
                    <td>@item["ExamDate"]
                    </td>
                    <td>@item["ItemName"]
                    </td>
                    <td style="display: none">@item["ExamPara"]
                    </td>
                    <td style="display: none">@item["Description"]
                    </td>
                    <td style="display: none">@item["Impression"]
                    </td>
                    <td style="display: none">@item["Recommendation"]
                    </td>
                    <td>@item["IsAbnormal"]
                    </td>
                    <td>@item["Status"]
                    </td>
                    <td>@item["ReportDate"]
                    </td>
                    <td>@item["ImageURL"]
                    </td>
                    @*<td>
                        @Ajax.ActionLink("详细", "ClinicInfoDetailByType", new { PatientId = @Model.UserId, vid = @Model.VisitId, type = "ExamDetails", sortno = @item["SortNo"], itemcode = @item["ItemCode"] }, new AjaxOptions() { OnSuccess = "success3();", OnBegin = "hide3();", UpdateTargetId = "part", HttpMethod = "Get", InsertionMode = InsertionMode.Replace, LoadingElementId = "loading" })
                    </td>*@
                    <td>
                        <input type="button" class="btn btn-primary" id="readDetail" value="查看" />
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
    <div id="readDataDiv" style="display: none; overflow: none;padding-top:20px;">
       @* <div class="modalHeader">
            <span>查看详细信息</span></div>*@
        <div class="modalContent">
            <form class="form-horizontal" role="form">
           @* <div class="form-group">
                <label for="readExamName" class="col-sm-3 control-label">
                    *检查名称</label>
                <div class="col-sm-9">                 
                    <select id="readExamName" name="ExamNameSelected" class="form-control" disabled="disabled">
                    </select>
                </div>
            </div>*@
            <div class="form-group">
                <label for="readExamPara" class="col-sm-2 control-label">
                    检查参数</label>
                <div class="col-sm-10">
                    <textarea id="readExamPara" class="form-control" disabled="disabled" style="height: 40px;"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="readDescription" class="col-sm-2 control-label">
                    检查所见</label>
                <div class="col-sm-10">
                    <textarea id="readDescription" class="form-control" disabled="disabled" style="height: 80px;"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="readImpression" class="col-sm-2 control-label">
                    印象</label>
                <div class="col-sm-10">
                    <textarea id="readImpression" class="form-control" disabled="disabled" style="height: 80px;"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="readRecommendation" class="col-sm-2 control-label">
                    建议</label>
                <div class="col-sm-10">
                    <textarea id="readRecommendation" class="form-control" disabled="disabled" style="height: 80px;"></textarea>
                </div>
            </div>
            </form>
        </div>
    </div>
</div>
<div id="loading" style="display: none; margin-top: 70px" align="center">
    <img alt="Load" src="/Content/Image/loading.gif" width="100" height="20" style="max-width: 90%" />
    <p>
        加载中，请稍后</p>
</div>
<div id="LabTestInfo" style="display: none; width: 90%; margin: 0 auto;">
    <table id="LabTestInfoTable" class="display" cellspacing="0" width="100%" align="center">
        <thead>
            <tr>
                @*<td>
                    化验序号
                </td>*@
                <td>
                    化验类型
                </td>
                <td>
                    化验项目名称
                </td>
                <td>
                    化验日期
                </td>
                <td>
                    化验结果状态
                </td>
                <td>
                    报告日期
                </td>
                <td>
                    具体参数
                </td>
            </tr>
        </thead>
        <tbody>
            @if (Model.LabTestInfoTable.Rows.Count > 0)
            {
                foreach (System.Data.DataRow item in Model.LabTestInfoTable.Rows)
                {
                <tr>
                    @*<td>@item["SortNo"]
                    </td>*@
                    <td>@item["LabItemTypeName"]
                    </td>
                    <td>@item["LabItemName"]
                    </td>
                    <td>@item["LabTestDate"]
                    </td>
                    <td>@item["Status"]
                    </td>
                    <td>@item["ReportDate"]
                    </td>
                    <td>
                        @Ajax.ActionLink("详细", "ClinicInfoDetailByType", new { PatientId = @Model.UserId, vid = @Model.VisitId, type = "LabTestDetails", sortno = @item["SortNo"], itemcode = @item["LabItemCode"] }, new AjaxOptions() { OnSuccess = "success4();", OnBegin = "hide4();", UpdateTargetId = "part", HttpMethod = "Get", InsertionMode = InsertionMode.Replace, LoadingElementId = "loading1" })
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
</div>
<div id="loading1" style="display: none; margin-top: 70px" align="center">
    <img alt="Load" src="/Content/Image/loading.gif" width="100" height="20" style="max-width: 90%" />
    <p>
        加载中，请稍后</p>
</div>
<div id="DrugRecord" style="display: none; width: 90%; margin: 0 auto;">
    <table id="DrugRecordTable" class="display" cellspacing="0" width="100%" align="center">
        <thead>
            <tr>
                @*<td>
                    药嘱序号
                </td>*@
                <td>
                    长期医嘱标志
                </td>
                <td>
                    药嘱类别
                </td>
                <td>
                    药嘱内容
                </td>
                <td>
                    单次剂量
                </td>
                <td>
                    剂量单位
                </td>
                <td>
                    给药途径
                </td>
                <td>
                    开始时间
                </td>
                <td>
                    结束时间
                </td>
                <td>
                    执行频率
                </td>
            </tr>
        </thead>
        <tbody>
            @if (Model.DrugRecordTable.Rows.Count > 0)
            {
                foreach (System.Data.DataRow item in Model.DrugRecordTable.Rows)
                {
                <tr>
                    @*<td>@item["OrderNo"]
                    </td>*@
                    <td>@item["RepeatIndicator"]
                    </td>
                    <td>@item["OrderClass"]
                    </td>
                    <td>@item["OrderContent"]
                    </td>
                    <td>@item["Dosage"]
                    </td>
                    <td>@item["DosageUnits"]
                    </td>
                    <td>@item["Administration"]
                    </td>
                    <td>@item["StartDateTime"]
                    </td>
                    <td>@item["StopDateTime"]
                    </td>
                    <td>@item["Frequency"]
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
</div>
<div id="part" style="display: none; margin-top: 50px; margin-bottom: 30px;">
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#menu a").attr("id", ""); //Reset id's 
        $("#menu li:eq(1) a").attr("id", "current");

        $(document).on("click","#readDetail",function(){
            trSeq = $(this).parent().parent().parent().find("tr").index($(this).parent().parent());
            $(this).parent().css("color","red");
            var ExamPara = $("#TableBody tr:eq(" + trSeq + ") td:eq(3)").text().trim();
            var Description = $("#TableBody tr:eq(" + trSeq + ") td:eq(4)").text().trim();
            var Impression = $("#TableBody tr:eq(" + trSeq + ") td:eq(5)").text().trim();
            var Recommendation = $("#TableBody tr:eq(" + trSeq + ") td:eq(6)").text().trim();
           
            $("#readExamPara").val(ExamPara);
            $("#readDescription").val(Description);
            $("#readImpression").val(Impression);
            $("#readRecommendation").val(Recommendation);

            $("#readDataDiv").show();
        })

        var type = document.getElementById("NowType").value;
        if (type == "DiagnosisInfo")    //诊断、药品没有子表  if的判断为之后的列宽调节提供便利
        {
            var location = type + "Table";
