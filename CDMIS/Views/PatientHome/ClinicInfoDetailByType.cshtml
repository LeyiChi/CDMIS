                                </td>
                                <td>
                                    参数值
                                </td>                           
                                <td>
                                    单位
                                </td>
                                <td>
                                    是否正常
                                </td>    
                            </tr>
                            </thead>

                            <tbody>
                            @if (Model.LabTestDetailsTable.Rows.Count > 0)
                            {
                                foreach (System.Data.DataRow item in Model.LabTestDetailsTable.Rows)
                               {
                                <tr>
                                   <td>@item["Name"]
                                    </td>
                                    <td>@item["Value"]
                                    </td>
                                    <td>@item["Unit"]
                                    </td>
                                    <td>@item["IsAbnormal"]
                                    </td>
                                    
                              </tr>
                              }
                            }
                        </tbody>
                          </table>
 </div>

