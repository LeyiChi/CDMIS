@model CDMIS.ViewModels. ClinicInfoDetailByTypeViewModel
@{
    ViewBag.Title = "检查/化验详细（患者）";
}


<style type="text/css">
    
.display
    {
        font-size: 15px;
        color: black;
    }
    
</style>

 @Html.HiddenFor(model => model.NowDetailType)

 @*<div>
 <input type="checkbox" name="putup" onclick="hidediv()"/>
 </div>*@

  <div id="DetailTable">

  <div id="ExamDetails" style="display:none;width:90%;margin:0 auto;">
  <table id="ExamDetailsTable" class="display" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <td>
                                    参数编码名称
                                </td>
                                <td>
                                    参数值
                                </td>                           
                                <td>
                                    单位
                                </td>
                                <td>
                                    是否正常
                                </td>    
                            </tr>
                            </thead>

                            <tbody>
                            @if (Model.ExamDetailsTable.Rows.Count > 0)
                            {
                                foreach (System.Data.DataRow item in Model.ExamDetailsTable.Rows)
                               {
                                <tr>
                                   <td>@item["Name"]
                                    </td>
                                    <td>@item["Value"]
                                    </td>
                                    <td>@item["Unit"]
                                    </td>
                                    <td>@item["IsAbnormal"]
                                    </td>
                                    
                              </tr>
                              }
                            }
                        </tbody>
                          </table>
 </div>

